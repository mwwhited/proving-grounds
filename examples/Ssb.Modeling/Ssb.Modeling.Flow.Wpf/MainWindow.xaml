<Window x:Class="Ssb.Modeling.Flow.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
        xmlns:l="clr-namespace:Ssb.Modeling.Flow.Wpf"
        xmlns:jas="clr-namespace:Ssb.Modeling.Flow.Wpf.DragReorder" 
        
        Title="MainWindow" Height="350" Width="525"
        Background="LightGray"
        x:Name="_root"
        >
    <Window.Resources>
        <Style x:Key="ItemContStyle" TargetType="ListViewItem">
            <Style.Resources>
                <LinearGradientBrush x:Key="MouseOverBrush" StartPoint="0.5, 0" EndPoint="0.5, 1">
                    <GradientStop Color="#22000000" Offset="0" />
                    <GradientStop Color="#44000000" Offset="0.4" />
                    <GradientStop Color="#55000000" Offset="0.6" />
                    <GradientStop Color="#33000000" Offset="0.9" />
                    <GradientStop Color="#22000000" Offset="1" />
                </LinearGradientBrush>
            </Style.Resources>
            <Setter Property="Padding" Value="0,4" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <!-- The default control template for ListViewItem has a Border 
           which contains the item's content. -->
            <Setter Property="Border.BorderThickness" Value="0,0,0,0.5" />
            <Setter Property="Border.BorderBrush" Value="LightGray" />
            <!-- These triggers react to changes in the attached properties set
           during a managed drag-drop operation. -->
            <Style.Triggers>
                <Trigger Property="jas:ListViewItemDragState.IsBeingDragged" Value="True">
                    <Setter Property="FontWeight" Value="DemiBold" />
                </Trigger>
                <Trigger Property="jas:ListViewItemDragState.IsUnderDragCursor" Value="True">
                    <Setter Property="Background" Value="{StaticResource MouseOverBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0"
                     x:Name="_serviceName" />
            <Button Grid.Column="1"
                    Content="New Service" 
                    Click="Button_Click" />
        </Grid>
        <Grid Grid.Row="1" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ComboBox x:Name="_sender"
                      ItemsSource="{Binding Path=Services}"
                      SelectedValuePath="Name"
                      DisplayMemberPath="Name"
                      />
            <ComboBox Grid.Column="1" 
                      x:Name="_receiver"
                      ItemsSource="{Binding Path=Services}"
                      SelectedValuePath="Name"
                      DisplayMemberPath="Name"
                      />
            <TextBox Grid.Column="2"
                     x:Name="_messageName" />
            <Button Grid.Column="3" 
                    Click="Button_Click_1"
                    Content="New Message"
                    />

        </Grid>
        <ScrollViewer Grid.Row="2" 
                      CanContentScroll="True"
                      HorizontalContentAlignment="Center"
                      VerticalContentAlignment="Center"
                      VerticalScrollBarVisibility="Visible"
                      HorizontalScrollBarVisibility="Visible"
                      >
            <l:SequenceDiagramCanvas x:Name="_drawingSurface" Background="LightBlue">
            </l:SequenceDiagramCanvas>
        </ScrollViewer>

        <GridSplitter Grid.Row="2" Grid.Column="1"              
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"
                      Background="DarkBlue" 
                      ShowsPreview="True"
                      Width="3"
                      />

        <Grid Grid.Row="2" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"  
                       Text="Messages"/>
            <ListView Grid.Row="1"
                      x:Name="_messages"
                      ItemsSource="{Binding Messages}"
                      SelectedItem="{Binding ElementName=_drawingSurface,Path=SelectedMessage}"
                      SelectionMode="Single"
                      >
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Sender" Width="75">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <ComboBox ItemsSource="{Binding ElementName=_root,Path=Services, Mode=OneWay}"
                                              LostFocus="ComboBox_LostFocus"
                                              DisplayMemberPath="Name"
                                              Text="{Binding Sender}" 
                                              IsSynchronizedWithCurrentItem="False"                                              
                                              IsEditable="True"                                          
                                              />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Receiver" Width="75">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <ComboBox ItemsSource="{Binding ElementName=_root,Path=Services, Mode=OneWay}"
                                              LostFocus="ComboBox_LostFocus"
                                              DisplayMemberPath="Name"
                                              Text="{Binding Receiver}" 
                                              IsSynchronizedWithCurrentItem="False"
                                              IsEditable="True"                                          
                                              />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Message" Width="75">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <ComboBox ItemsSource="{Binding ElementName=_root,Path=MessageTypes, Mode=OneWay}"
                                              LostFocus="ComboBox_LostFocus2"
                                              DisplayMemberPath="Name"
                                              Text="{Binding Name}" 
                                              IsSynchronizedWithCurrentItem="False"
                                              IsEditable="True"                                          
                                              />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Commands" Width="75">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="&lt;&gt;" DataContext="{Binding}" Click="Button_Click_2" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

            <TextBlock Grid.Row="2"  
                       Text="Services"/>
            <ListView Grid.Row="3" 
                      x:Name="_services"
                      ItemsSource="{Binding Services}"
                      SelectionMode="Single"
                      >
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Service" Width="75">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Name, UpdateSourceTrigger=Explicit}" 
                                              LostFocus="TextBox_LostFocus"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

            <TextBlock Grid.Row="4" Text="Message Types" />
            <ListView Grid.Row="5" 
                      x:Name="_messageTypes"
                      ItemsSource="{Binding MessageTypes}"
                      SelectionMode="Single"
                      >
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Message Type" Width="75">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Name, UpdateSourceTrigger=Explicit}" 
                                              LostFocus="TextBox_LostFocus2"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

        </Grid>

    </Grid>
</Window>
