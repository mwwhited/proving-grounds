<UserControl x:Class="Ssb.Modeling.Wpf.EditorControls.ContractEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:m="clr-namespace:Ssb.Modeling.Models;assembly=Ssb.Modeling.Models"
             mc:Ignorable="d" 
             x:Name="root"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Icons.xaml" />
                <ResourceDictionary Source="../Resources/EnumLists.xaml" />
                <ResourceDictionary Source="../Resources/TypeConverters.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="Contract Name: " />
        <TextBox Grid.Column="1" Text="{Binding Path=ContractName}" />

        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal">
            <Button Grid.Column="2" Tag="Add" 
                                                Command="{Binding Path=AddContractMessageType}"
                                                Height="24"
                                                >
                <Image Source="{StaticResource icon-action-add-small}" />
            </Button>
            <Button Grid.Column="2" Tag="Delete" 
                                                Command="{Binding Path=DeleteContractMessageType}" CommandParameter="{Binding ElementName=_contract2Conversations,Path=SelectedItem}"
                                                Height="24"
                                                >
                <Image Source="{StaticResource icon-action-delete-small}" />
            </Button>
        </StackPanel>

        <ListBox x:Name="_contract2Conversations" Grid.Row="2" Grid.ColumnSpan="2" ItemsSource="{Binding Path=ContractMessageTypes, Mode=OneWay}">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type m:ContractMessageTypeModel}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Message Type: " />
                        <ComboBox SelectedItem="{Binding Path=MessageType, Mode=TwoWay}" 
                                                              DisplayMemberPath="MessageTypeName"
                                                              ItemsSource="{Binding ElementName=root,Path=MessageTypesSource, Mode=OneWay}"
                                                              />
                        <TextBlock Text=" Sent By: " />
                        <ComboBox SelectedItem="{Binding Path=SentBy, Mode=TwoWay}"
                                                              ItemsSource="{Binding Source={StaticResource messageSender}, Mode=OneWay}"
                                                              />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
