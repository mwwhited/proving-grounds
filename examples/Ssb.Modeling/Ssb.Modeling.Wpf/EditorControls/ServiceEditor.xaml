<UserControl x:Class="Ssb.Modeling.Wpf.EditorControls.ServiceEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:m="clr-namespace:Ssb.Modeling.Models;assembly=Ssb.Modeling.Models"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             x:Name="root"
             d:DesignHeight="300" d:DesignWidth="300"
             
             d:DataContext="{d:DesignData Source=/DesignerData/ServiceSample.xaml}"
             d:QueuesSource="{d:DesignData Source=/DesignerData/QueuesSample.xaml}"
             d:ContractsSource="{d:DesignData Source=/DesignerData/QueuesSample.xaml}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Icons.xaml" />
                <ResourceDictionary Source="../Resources/EnumLists.xaml" />
                <ResourceDictionary Source="../Resources/TypeConverters.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="Service: " />
        <xctk:WatermarkTextBox Grid.Column="1" Text="{Binding Path=ServiceName}" Watermark="Service Name" />

        <TextBlock Grid.Row="1" Text="Queue: " />
        <ComboBox  Grid.Column="1" Grid.Row="1" 
                    SelectedItem="{Binding Path=Queue, Mode=TwoWay}"
                    DisplayMemberPath="DisplayName"
                    ItemsSource="{Binding ElementName=root, Path=QueuesSource, Mode=OneWay}"
                    />

        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal">
            <ComboBox x:Name="_serviceContractType" 
                      DisplayMemberPath="ContractName"
                      ItemsSource="{Binding ElementName=root,Path=ContractsSource, Mode=OneWay}" Margin="0,0,2,0" />
            <Button Tag="Add" 
                    Command="{Binding Path=AddContract}" CommandParameter="{Binding ElementName=_serviceContractType,Path=SelectedItem}"
                    Height="24"
                    >
                <Image Source="{StaticResource icon-action-add-small}" />
            </Button>
            <Button  Tag="Delete" 
                    Command="{Binding Path=DeleteContract}" CommandParameter="{Binding ElementName=_service2contracts,Path=SelectedItem}"
                    Height="24"
                    >
                <Image Source="{StaticResource icon-action-delete-small}" />
            </Button>
        </StackPanel>

        <ListBox x:Name="_service2contracts" Grid.Row="3" Grid.ColumnSpan="2" ItemsSource="{Binding Contracts, Mode=OneWay}">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type m:ContractModel}">
                    <TextBlock Text="{Binding ContractName}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
