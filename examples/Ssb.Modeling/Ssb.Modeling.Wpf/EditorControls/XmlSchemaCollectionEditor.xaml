<UserControl x:Class="Ssb.Modeling.Wpf.EditorControls.XmlSchemaCollectionEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:m="clr-namespace:Ssb.Modeling.Models;assembly=Ssb.Modeling.Models"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Icons.xaml" />
                <ResourceDictionary Source="../Resources/EnumLists.xaml" />
                <ResourceDictionary Source="../Resources/TypeConverters.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid d:DataContext="{d:DesignData Source=/DesignerData/XmlSchemaCollectionSample.xaml}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="DB Schema Name: " />
        <xctk:WatermarkTextBox Grid.Column="1" Text="{Binding Path=SchemaName}" Watermark="DB Schema" />

        <TextBlock Grid.Row="1" Text="XML Schema Collection: " />
        <xctk:WatermarkTextBox Grid.Column="1" Grid.Row="1" Text="{Binding Path=XmlSchemaCollectionName}" Watermark="XML Schema" />

        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal">
            <Button Tag="Add" Height="24"
                    Command="{Binding Path=AddXmlSchema}">
                <Image Source="{StaticResource icon-action-add-small}" />
            </Button>
            <Button Tag="Delete" Height="24" 
                    Command="{Binding Path=DeleteXmlSchema}" CommandParameter="{Binding ElementName=_xmlSchemaCollection2xmlSchema,Path=SelectedItem}">
                <Image Source="{StaticResource icon-action-delete-small}" />
            </Button>
        </StackPanel>

        <ListBox x:Name="_xmlSchemaCollection2xmlSchema" 
                 Grid.Row="3" Grid.ColumnSpan="2" 
                 ItemsSource="{Binding Path=XmlSchemas, Mode=OneWay}"
                 HorizontalContentAlignment="Stretch"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Expander IsExpanded="True">
                        <Expander.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{StaticResource icon-xmlschema-small}" Height="16" />
                                <TextBlock Text="{Binding TargetNamespace}" />
                            </StackPanel>
                        </Expander.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <xctk:WatermarkTextBox AcceptsReturn="True" AcceptsTab="True" 
                                               Text="{Binding Path=XmlSchema}" 
                                               Watermark="XSD" TextWrapping="Wrap" />
                            <Button Grid.Column="1" Tag="Add" Height="24"
                                    Command="{Binding Path=ReformatXml}" >
                                <Image Source="{StaticResource icon-xmlschema-small}" />
                            </Button>
                        </Grid>
                    </Expander>
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>
    </Grid>
</UserControl>
