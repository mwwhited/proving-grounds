<TreeView x:Class="Ssb.Modeling.Wpf.EditorControls.ProjectTreeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             
            xmlns:m="clr-namespace:Ssb.Modeling.Models;assembly=Ssb.Modeling.Models"
            xmlns:c="clr-namespace:Ssb.Modeling.Models.Collections;assembly=Ssb.Modeling.Models"
            xmlns:md="clr-namespace:Ssb.Modeling.Wpf.DesignerData;assembly=Ssb.Modeling.Wpf"
             
            mc:Ignorable="d"
            ItemsSource="{Binding}"
            d:DataContext="{x:Static md:ProjectModelSample.DesignerDataSet}">

    <TreeView.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Icons.xaml" />
                <ResourceDictionary Source="../Resources/EnumLists.xaml" />
                <ResourceDictionary Source="../Resources/TypeConverters.xaml" />

                <ResourceDictionary>
                    <Style TargetType="{x:Type TreeViewItem}">
                        <Setter Property="IsExpanded" Value="True" />
                    </Style>
                    
                    <HierarchicalDataTemplate DataType="{x:Type m:ProjectModel}" ItemsSource="{Binding Path=.,Mode=OneWay}">
                        <StackPanel Orientation="Horizontal">
                            <Image Height="16"  Source="{StaticResource icon-project-small}" />
                            <TextBlock Text="{Binding ProjectName}" />
                        </StackPanel>
                    </HierarchicalDataTemplate>

                    <HierarchicalDataTemplate DataType="{x:Type c:ConversationGroupCollection}" ItemsSource="{Binding Path=.,Mode=OneWay}">
                        <StackPanel Orientation="Horizontal">
                            <Image Height="16"  Source="{StaticResource icon-settings-small}" />
                            <TextBlock Text="Conversation Groups" />
                        </StackPanel>
                    </HierarchicalDataTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type c:ConversationCollection}" ItemsSource="{Binding Path=.,Mode=OneWay}">
                        <StackPanel Orientation="Horizontal">
                            <Image Height="16"  Source="{StaticResource icon-settings-small}" />
                            <TextBlock Text="Conversations" />
                        </StackPanel>
                    </HierarchicalDataTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type c:ServiceCollection}" ItemsSource="{Binding Path=.,Mode=OneWay}">
                        <StackPanel Orientation="Horizontal">
                            <Image Height="16"  Source="{StaticResource icon-settings-small}" />
                            <TextBlock Text="Services" />
                        </StackPanel>
                    </HierarchicalDataTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type c:QueueCollection}" ItemsSource="{Binding Path=.,Mode=OneWay}">
                        <StackPanel Orientation="Horizontal">
                            <Image Height="16"  Source="{StaticResource icon-settings-small}" />
                            <TextBlock Text="Queues" />
                        </StackPanel>
                    </HierarchicalDataTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type c:ContractCollection}" ItemsSource="{Binding Path=.,Mode=OneWay}">
                        <StackPanel Orientation="Horizontal">
                            <Image Height="16"  Source="{StaticResource icon-settings-small}" />
                            <TextBlock Text="Contracts" />
                        </StackPanel>
                    </HierarchicalDataTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type c:MessageTypeCollection}" ItemsSource="{Binding Path=.,Mode=OneWay}">
                        <StackPanel Orientation="Horizontal">
                            <Image Height="16"  Source="{StaticResource icon-settings-small}" />
                            <TextBlock Text="Message Types" />
                        </StackPanel>
                    </HierarchicalDataTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type c:XmlSchemaCollectionCollection}" ItemsSource="{Binding Path=.,Mode=OneWay}">
                        <StackPanel Orientation="Horizontal">
                            <Image Height="16"  Source="{StaticResource icon-settings-small}" />
                            <TextBlock Text="XML Schemas" />
                        </StackPanel>
                    </HierarchicalDataTemplate>

                    <HierarchicalDataTemplate DataType="{x:Type m:ConversationServiceModel}" ItemsSource="{Binding Path=.,Mode=OneWay}">
                        <StackPanel Orientation="Horizontal">
                            <Image Height="16"  Source="{StaticResource icon-settings-small}" />
                            <TextBlock Text="{Binding Endpoint}" />
                        </StackPanel>
                    </HierarchicalDataTemplate>
                    <DataTemplate DataType="{x:Type m:InternalActivatorModel}">
                        <StackPanel Orientation="Horizontal">
                            <Image Height="16"  Source="{StaticResource icon-settings-small}" />
                            <TextBlock Text="{Binding SchemaName}" />
                            <TextBlock Text="." />
                            <TextBlock Text="{Binding ProcedureName}" />
                        </StackPanel>
                    </DataTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type m:ContractMessageTypeModel}" ItemsSource="{Binding Path=.,Mode=OneWay}">
                        <StackPanel Orientation="Horizontal">
                            <Image Height="16"  Source="{StaticResource icon-settings-small}" />
                            <TextBlock Text="{Binding SentBy}" />
                            <TextBlock Text=": " />
                            <TextBlock Text="{Binding MessageType.MessageTypeName}" />
                        </StackPanel>
                    </HierarchicalDataTemplate>
                    <DataTemplate DataType="{x:Type m:XmlSchemaModel}">
                        <StackPanel Orientation="Horizontal">
                            <Image Height="16" Source="{StaticResource icon-xmlschema-small}" />
                            <TextBlock Text="{Binding TargetNamespace}" />
                        </StackPanel>
                    </DataTemplate>

                    <HierarchicalDataTemplate DataType="{x:Type m:ConversationGroupModel}" ItemsSource="{Binding Conversations}">
                        <StackPanel Orientation="Horizontal">
                            <Image Height="16"  Source="{StaticResource icon-conversationGroup-small}" />
                            <TextBlock Text="{Binding ConversationGroupName}" />
                        </StackPanel>
                    </HierarchicalDataTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type m:ConversationModel}" ItemsSource="{Binding Path=.,Mode=OneWay}">
                        <StackPanel Orientation="Horizontal">
                            <Image Height="16"  Source="{StaticResource icon-conversation-small}" />
                            <TextBlock Text="{Binding ConversationName}" />
                        </StackPanel>
                    </HierarchicalDataTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type m:ServiceModel}" ItemsSource="{Binding Path=.,Mode=OneWay}">
                        <StackPanel Orientation="Horizontal">
                            <Image Height="16" Source="{StaticResource icon-service-small}" />
                            <TextBlock Text="{Binding ServiceName}" />
                        </StackPanel>
                    </HierarchicalDataTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type m:QueueModel}" ItemsSource="{Binding Path=.,Mode=OneWay}">
                        <StackPanel Orientation="Horizontal">
                            <Image Height="16" Source="{StaticResource icon-queue-small}" />
                            <TextBlock Text="{Binding SchemaName}" />
                            <TextBlock Text="." />
                            <TextBlock Text="{Binding QueueName}" />
                        </StackPanel>
                    </HierarchicalDataTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type m:ContractModel}" ItemsSource="{Binding Path=.,Mode=OneWay}">
                        <StackPanel Orientation="Horizontal">
                            <Image Height="16" Source="{StaticResource icon-contract-small}" />
                            <TextBlock Text="{Binding ContractName}" />
                        </StackPanel>
                    </HierarchicalDataTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type m:MessageTypeModel}" ItemsSource="{Binding Path=.,Mode=OneWay}">
                        <StackPanel Orientation="Horizontal">
                            <Image Height="16" Source="{StaticResource icon-messageType-small}" />
                            <TextBlock Text="{Binding MessageTypeName}" />
                        </StackPanel>
                    </HierarchicalDataTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type m:XmlSchemaCollectionModel}" ItemsSource="{Binding Path=.,Mode=OneWay}">
                        <StackPanel Orientation="Horizontal">
                            <Image Height="16" Source="{StaticResource icon-xmlschema-small}" />
                            <TextBlock Text="{Binding SchemaName}" />
                            <TextBlock Text="." />
                            <TextBlock Text="{Binding XmlSchemaCollectionName}" />
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </TreeView.Resources>
</TreeView>