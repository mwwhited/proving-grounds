@{
    ViewBag.Title = "CMS";
    var siebelClientUrl =
        !string.IsNullOrWhiteSpace(this.Request.QueryString["dev"]) ? "http://sw10hs6801.bmwgroup.net/customercentralmx/" : //dev URL
        !string.IsNullOrWhiteSpace(this.Request.QueryString["mock"]) ? "http://web2.bmwgroup.net/Home/Siebel?mock=true" : // local mock
        this.Url.Action("Siebel", "Home"); //local URL
    var dfeClientUrl = this.Url.Action("DFE", "Home"); // "http://web1.bmwgroup.net/Home/DFE";
}

<h2>CMS</h2>@if (!string.IsNullOrWhiteSpace(this.Request.QueryString["dev"]))
{
    <h3>Dev</h3>
}
else if (!string.IsNullOrWhiteSpace(this.Request.QueryString["mock"]))
{
    <h3>Mock</h3>
}
else
{
    <h3>Local</h3>
}
<h4>@siebelClientUrl</h4>

